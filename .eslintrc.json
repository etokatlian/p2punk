{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "ignoreRestSiblings": true,
        "varsIgnorePattern": "^$", // Don't ignore regular variables
        "argsIgnorePattern": "^$", // Don't ignore function parameters
        "destructuredArrayIgnorePattern": "^$" // Don't ignore array destructuring
      }
    ]
  }
}
